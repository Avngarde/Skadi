<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Skadi.ViewModels"
             x:Class="Skadi.Views.MainPage">
    <ContentPage.BindingContext>
        <viewModels:MainPageViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="OpenAddWorkoutForm" Text="+" Command="{Binding OpenAddWorkoutFormCommand}"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout BindableLayout.ItemsSource="{Binding Workouts}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Border Margin="10" Padding="10" StrokeShape="RoundRectangle 5,5,5,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80*" />
                                <ColumnDefinition Width="20*" />
                            </Grid.ColumnDefinitions>
                            
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50*" />
                                    <RowDefinition Height="50*" />
                                </Grid.RowDefinitions>
                                
                                <Label Grid.Row="0" Text="{Binding WorkoutName}" />
                                <Label Grid.Row="1" Text="{Binding RoundsText}" TextColor="SlateGray"/>
                            </Grid>
                            
                            <Border Grid.Column="1" BackgroundColor="{Binding DifficultyColor}" Stroke="{Binding DifficultyColor}" StrokeShape="RoundRectangle 5,5,5,5">
                                <Label Text="{Binding Difficulty}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="{Binding DifficultyTextColor}" />
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </StackLayout>
    </ScrollView>

</ContentPage>
