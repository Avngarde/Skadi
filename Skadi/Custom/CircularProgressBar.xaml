<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customs="clr-namespace:Skadi.Custom"
             x:Class="Skadi.Custom.CircularProgressBar">
    <GraphicsView x:Name="graphicsView">
        <GraphicsView.Drawable>
            <customs:CircularProgressBarDrawable
                Progress="{Binding Progress}"
                Size="{Binding Size}"
                TextColor="{Binding TextColor}"
                Thickness="{Binding Thickness}"
                ProgressColor="{Binding ProgressColor}"
                ProgressLeftColor="{Binding ProgressLeftColor}"/>
        </GraphicsView.Drawable>
    </GraphicsView>
</ContentView>